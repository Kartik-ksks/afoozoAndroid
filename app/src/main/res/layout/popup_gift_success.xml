<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/retry_alert_bg"
            android:orientation="vertical"

            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@drawable/ic_check_mark"/>

                <in.kpis.afoozo.custome.TextViewRegular
                    style="@style/success_popup_text_view_style"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="@dimen/sp_18"
                    android:text="@string/generated_gift_code"/>


                <in.kpis.afoozo.custome.TextViewRegular
                    android:id="@+id/txtPopCode"
                    style="@style/success_popup_text_view_style"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/black_rounded_corner_border"
                    android:layout_marginTop="@dimen/dp_10" />

                <in.kpis.afoozo.custome.TextViewRegular
                    style="@style/success_popup_text_view_style"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/please_ask_your_friend_to_download"/>


                <in.kpis.afoozo.custome.ButtonViewRegular
                    android:id="@+id/btnPopShare"
                    style="@style/login_signup_button_style"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/share" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
