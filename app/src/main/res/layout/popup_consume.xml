<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/retry_alert_bg"
            android:orientation="vertical"

            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/qty_remaining"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/txt_small"
                        android:textStyle="bold" />

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:id="@+id/txtPCQtyRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0 Bottle"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_small"
                        android:textStyle="bold" />

                </LinearLayout>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/use_slider_below_to_choose"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <in.kpis.afoozo.custome.TextViewRegular
                    android:id="@+id/txtPCSelectedQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="5dp"
                    android:text="1 Bottle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvPCMinus"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:padding="@dimen/dp_5"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_minus"
                        android:visibility="visible" />

                    <SeekBar
                        android:id="@+id/sbQty"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:autofillHints="5"
                        android:max="3"
                        android:progressTint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/imvPCAdd"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:padding="@dimen/dp_5"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_plus"
                        android:visibility="visible" />
                </LinearLayout>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="5dp"
                    android:text="@string/item_summary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/item_name"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/txt_small"
                        android:textStyle="bold" />

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:id="@+id/txtPCItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=" Grover Wine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_small"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/quantity"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/txt_small"
                        android:textStyle="bold" />

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:id="@+id/txtPCItemQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=" 1 Bottle"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_small"
                        android:textStyle="bold" />

                </LinearLayout>

                <in.kpis.afoozo.custome.ButtonViewRegular
                    android:id="@+id/btnPCScan"
                    style="@style/login_signup_button_style"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/scan_and_consume" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/light_gray" />

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:text="@string/OR" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/light_gray" />
                </LinearLayout>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:id="@+id/txtPCGift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="5dp"
                    android:text="@string/gift_to_someone"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt_medium" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
