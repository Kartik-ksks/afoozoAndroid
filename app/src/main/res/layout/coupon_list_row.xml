<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coupon_code_bg"
                android:padding="@dimen/dp_10"
                android:text="FIRST"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"/>

            <in.kpis.afoozo.custome.TextViewRegular
                android:id="@+id/txtApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"
                android:text="@string/apply"
                android:textColor="@color/green"/>

            <in.kpis.afoozo.custome.ButtonViewRegular
                android:id="@+id/btnCopy"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_25"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/copy_btn_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textSize="@dimen/sp_14"
                android:text="@string/copy"
                android:textColor="@color/colorAccent"/>

        </RelativeLayout>

        <in.kpis.afoozo.custome.TextViewRegular
            android:id="@+id/txtOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="50% OFF upto Rs.100"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorPrimary"/>

        <in.kpis.afoozo.custome.TextViewRegular
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            android:text="On order of Rs99 and above. Valid once per restaurant every 60 minutes."
            android:textColor="@color/colorPrimary"/>

        <in.kpis.afoozo.custome.TextViewRegular
            android:id="@+id/txtViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            android:text="@string/view_details"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

</layout>
