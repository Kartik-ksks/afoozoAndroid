<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:focusable="true"
    android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/retry_alert_bg"
            android:orientation="vertical"

            android:padding="@dimen/dp_10">

            <ScrollView
                android:id="@+id/nsvMain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:orientation="vertical">


                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="5dp"
                    android:text="@string/name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="bold" />

                <in.kpis.afoozo.custome.EditTextViewRegular
                    android:id="@+id/etName"
                    style="@style/popup_edit_text_style"
                    android:layout_marginTop="@dimen/dp_5" />

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/mobile"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="bold" />

                <in.kpis.afoozo.custome.EditTextViewRegular
                    android:id="@+id/etMobile"
                    style="@style/popup_edit_text_style"
                    android:layout_marginTop="@dimen/dp_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <in.kpis.afoozo.custome.TextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/date"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/txt_medium"
                            android:textStyle="bold" />

                        <in.kpis.afoozo.custome.TextViewRegular
                            android:id="@+id/etDate"
                            style="@style/popup_edit_text_style"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableRight="@drawable/ic_calendar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <in.kpis.afoozo.custome.TextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/time"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/txt_medium"
                            android:textStyle="bold" />

                        <in.kpis.afoozo.custome.TextViewRegular
                            android:id="@+id/etTime"
                            style="@style/popup_edit_text_style"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableRight="@drawable/ic_clock" />
                    </LinearLayout>


                </LinearLayout>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/occasion"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="bold" />

                <LinearLayout
                    style="@style/popup_edit_text_style"
                    android:layout_marginTop="@dimen/dp_5"
                    android:inputType="textCapSentences">

                    <Spinner
                        android:id="@+id/spOccasion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/no_of_people"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="bold" />

                <in.kpis.afoozo.custome.EditTextViewRegular
                    android:id="@+id/etNoOfPeople"
                    style="@style/popup_edit_text_style"
                    android:layout_marginTop="@dimen/dp_5"
                    android:inputType="number"/>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/cooking_instruction"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt_medium"
                    android:textStyle="bold" />

                <in.kpis.afoozo.custome.EditTextViewRegular
                    android:id="@+id/etSpecialInstruction"
                    style="@style/popup_edit_text_style"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:gravity="start"
                    android:singleLine="false"
                    android:inputType="textCapSentences"/>
            </LinearLayout>
            </ScrollView>
            <in.kpis.afoozo.custome.ButtonViewRegular
                style="@style/login_signup_button_style"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/btnReserveTable"
                android:text="@string/reserve" />




        </LinearLayout>

</LinearLayout>
</layout>