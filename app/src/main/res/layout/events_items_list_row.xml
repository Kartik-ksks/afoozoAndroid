<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEvents"
        style="@style/list_card_view_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150">

                <ImageView
                    android:id="@+id/imvEvent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <ProgressBar
                    android:id="@+id/pbEvents"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_below="@id/rlImage">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:maxLines="2"
                        android:textColor="@color/black"/>

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:minLines="2"
                        android:textSize="@dimen/sp_14"
                        android:text="Store: Afoozo Panipath, Asandh Rd Underpass, Model"
                        android:textColor="@color/textPrimary"/>

                    <in.kpis.afoozo.custome.TextViewRegular
                        android:id="@+id/txtStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="Start Time: 08:00PM"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imvAddEvent"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/ic_save_event"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_120"
                android:layout_marginRight="@dimen/dp_20"
                android:translationZ="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:background="@drawable/calendar_white_circular_bg"
                android:gravity="center">

                <in.kpis.afoozo.custome.TextViewBold
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"/>

                <in.kpis.afoozo.custome.TextViewBold
                    android:id="@+id/txtMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"/>

                <in.kpis.afoozo.custome.TextViewBold
                    android:id="@+id/txtYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"/>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
