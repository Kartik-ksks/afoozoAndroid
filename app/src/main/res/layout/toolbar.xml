<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/colorPrimary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:theme="@style/AppTheme"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <in.kpis.afoozo.custome.TextViewRegular
            android:id="@+id/activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_large"
            android:textStyle="bold" />

        <in.kpis.afoozo.custome.TextViewFontMaker
            android:id="@+id/txtAfoozo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:visibility="gone" />

        <in.kpis.afoozo.custome.TextViewRegular
            android:id="@+id/txtBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:visibility="gone" />

        <in.kpis.afoozo.custome.CircleImageView
            android:id="@+id/toolbar_logo"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toolbarQR"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/transparent_qr_bg"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_qr_code_color_accent"
            android:visibility="gone" />


        <in.kpis.afoozo.custome.TextViewRegular
            android:id="@+id/toolbarCallResturant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableLeft="@drawable/ic_call_primery"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/call"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />


    </androidx.appcompat.widget.Toolbar>

</layout>