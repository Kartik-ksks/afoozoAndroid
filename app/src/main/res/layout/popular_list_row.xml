<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_margin="@dimen/dp_5"
            android:translationZ="@dimen/dp_5"
            android:background="@drawable/popular_gradient_layout_bg"
            android:padding="@dimen/dp_10">

            <in.kpis.afoozo.custome.CircleImageView
                android:id="@+id/imvCat"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"/>

            <ProgressBar
                android:id="@+id/pbPopular"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </RelativeLayout>


        <in.kpis.afoozo.custome.TextViewRegular
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"/>

    </LinearLayout>

</layout>
