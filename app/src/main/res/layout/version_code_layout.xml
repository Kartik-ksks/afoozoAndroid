<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <in.kpis.afoozo.custome.TextViewRegular
                android:id="@+id/txtPopHeading"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/new_version_found"
                android:background="@color/black"
                android:gravity="center"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/colorAccent"/>

            <in.kpis.afoozo.custome.TextViewRegular
                android:id="@+id/eTextPop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:text="@string/newer_version_is_available"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal">

                <in.kpis.afoozo.custome.TextViewRegular
                    android:id="@+id/txtPopCancel"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/update_later"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorAccent"/>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:id="@+id/txtPopOk"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/update_now"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>