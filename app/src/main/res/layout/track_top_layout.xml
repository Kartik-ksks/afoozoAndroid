<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:translationZ="@dimen/dp_10"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10">

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_2"
                        android:layout_weight=".4"/>

                    <View
                        android:id="@+id/viewLeft"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@color/Grey_300"/>

                    <View
                        android:id="@+id/viewCenter"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@color/Grey_300"/>

                    <View
                        android:id="@+id/viewRight"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@color/Grey_300"/>

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_2"
                        android:layout_weight=".4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/viewConfirmed"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:background="@drawable/grey_black_circle_bg"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:gravity="center_horizontal">

                        <View
                            android:id="@+id/viewtake_away"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerInParent="true"
                            android:background="@drawable/grey_circle_bg"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <View
                            android:id="@+id/viewOnTheWay"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerInParent="true"
                            android:background="@drawable/grey_circle_bg"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/viewDelivery"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/grey_circle_bg"/>

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirmed"
                    android:textAlignment="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray"/>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/prepared"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray"/>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/on_the_way"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/gray"/>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="@string/delivery"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
