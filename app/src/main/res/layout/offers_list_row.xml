<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <androidx.cardview.widget.CardView
        style="@style/list_card_view_style"
        app:cardCornerRadius="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/coupon_code_bg"
                    android:padding="@dimen/dp_10"
                    android:text="Afoozo_FRIST"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"/>

                <in.kpis.afoozo.custome.TextViewRegular
                    android:id="@+id/txtCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/copy"
                    android:textColor="@color/green"/>

            </RelativeLayout>

            <in.kpis.afoozo.custome.TextViewRegular
                android:id="@+id/txtOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="50% OFF upto Rs.100"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/textPrimary"/>

            <in.kpis.afoozo.custome.TextViewRegular
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:text="On order of Rs99 and above. Valid once per restaurant every 60 minutes."
                android:textColor="@color/textPrimary"/>

            <in.kpis.afoozo.custome.TextViewRegular
                android:id="@+id/txtViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone"
                android:text="@string/view_details"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>
